a.navbar-brand
  white-space normal
  text-align center
  word-break break-all

html
  font-size: 14px

@media (min-width: 768px)
  html
    font-size 16px

.box-shadow
  box-shadow 0 .25rem .75rem rgba(0, 0, 0, .05)


.ui-container .pf-c-page
  height 100vh !important

#page-sidebar
  .fa-circle
    color #00c183

  .pf-c-nav .pf-c-nav__item
    i
      position relative
      top 1px

    .cheico-dashboard
      top 2px

    .fa-plus
      top 1px

  .pf-c-nav__section
    .pf-c-nav__list
      a
        padding-bottom 8px
        padding-top 8px
        line-height 8px

      a:after
        display none

  .pf-m-dark
    a:hover
      background-color var(--pf-c-nav--m-dark__item--m-current--BackgroundColor)

.pf-c-page .pf-c-page__header.nav-show
  min-height 60px
  max-height 60px
  animation-name showHeader
  animation-duration .2s
  animation-timing-function ease-in

@keyframes showHeader
  0%
    overflow hidden
    min-height 0
    max-height 0
  100%
    overflow visible
    min-height 60px
    max-height 60px

.pf-c-page .pf-c-page__header.nav-hide
  overflow hidden
  min-height 0
  max-height 0
  animation-name hideHeader
  animation-duration .2s
  animation-timing-function ease-in-out

@keyframes hideHeader
  0%
    overflow visible
    min-height 60px
    max-height 60px
  100%
    overflow hidden
    min-height 0
    max-height 0
