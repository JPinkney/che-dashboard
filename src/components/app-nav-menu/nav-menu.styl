a.navbar-brand
  white-space normal
  text-align center
  word-break break-all

html
  font-size: 14px

@media (min-width: 768px)
  html
    font-size 16px

.box-shadow
  box-shadow 0 .25rem .75rem rgba(0, 0, 0, .05)


.ui-container .pf-c-page
  height 100vh !important

#page-sidebar
  .fa-circle
    color #00c183

  .pf-c-nav .pf-c-nav__item
    i
      position relative
      top 1px

    .cheico-dashboard
      top 2px

    .fa-plus
      top 1px

  .pf-c-nav__section
    .pf-c-nav__list
      a
        padding-bottom 8px
        padding-top 8px
        line-height 8px

      a:after
        display none

  .pf-m-dark
    a:hover
      background-color var(--pf-c-nav--m-dark__item--m-current--BackgroundColor)

.pf-c-page .pf-c-page__header.nav-show
  min-height 60px
  max-height 60px
  animation-name showHeader
  animation-duration .2s
  animation-timing-function ease-in

@keyframes showHeader
  0%
    overflow hidden
    min-height 0
    max-height 0
  100%
    overflow visible
    min-height 60px
    max-height 60px

.pf-c-page .pf-c-page__header.nav-hide
  overflow hidden
  min-height 0
  max-height 0
  animation-name hideHeader
  animation-duration .2s
  animation-timing-function ease-in-out

@keyframes hideHeader
  0%
    overflow visible
    min-height 60px
    max-height 60px
  100%
    overflow hidden
    min-height 0
    max-height 0

.workspace-status-indicator
  display inline-block
  line-height inherit
  width 22px
  & > *
    display inline
  .workspace-status-spinner
    display inline-block
    line-height inherit
    vertical-align middle
  .workspace-status-spinner .spinner
    width 20px
    height 22px
    font-size 8px
    div
      width 2px
      border-radius 0
      margin-right 2px
  .workspace-status-error
    color #e22812 !important

.spinner
  width 120px
  height 110px
  text-align center
  padding-right 2px
  font-size 10px
.spinner > *
  background-color #4A90E2
  height 100%
  width 8px
  border-radius 6px
  margin-right 6px
  display inline-block
  animation sk-stretchdelay 1.2s infinite ease-in-out
.spinner .rect2
  animation-delay -1.1s
.spinner .rect3
  animation-delay -1.0s
@-webkit-keyframes sk-stretchdelay
  0%, 40%, 100%
    -webkit-transform scaleY(0.4)
  20%
    -webkit-transform scaleY(1.0)
@keyframes sk-stretchdelay
  0%, 40%, 100%
    transform scaleY(0.4)
    -webkit-transform scaleY(0.4)
  20%
    transform scaleY(1.0)
    -webkit-transform scaleY(1.0)
