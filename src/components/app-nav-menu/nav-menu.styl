.ui-container .pf-c-page
  height 100vh !important

#page-sidebar
  a.navbar-brand
    white-space normal
    text-align center
    word-break break-all
  .pf-c-nav .pf-c-nav__item .pf-c-nav__link
    padding-right 10px
    .workspace-name
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      line-height 14px
  .pf-c-nav .pf-c-nav__item
    i
      position relative
      top 1px
    .cheico-dashboard
      top 2px
    .fa-plus
      top 1px
  .pf-c-nav__section
    .pf-c-nav__list
      a
        padding-bottom 8px
        padding-top 8px
        line-height 22px
      a:after
        display none
  .pf-m-dark
    a:hover
      background-color var(--pf-c-nav--m-dark__item--m-current--BackgroundColor)

.pf-c-page .pf-c-page__header.nav-show
  min-height 60px
  max-height 60px
  animation-name showHeader
  animation-duration .2s
  animation-timing-function ease-in

@keyframes showHeader
  0%
    overflow hidden
    min-height 0
    max-height 0
  100%
    overflow visible
    min-height 60px
    max-height 60px

.pf-c-page .pf-c-page__header.nav-hide
  overflow hidden
  min-height 0
  max-height 0
  animation-name hideHeader
  animation-duration .2s
  animation-timing-function ease-in-out

@keyframes hideHeader
  0%
    overflow visible
    min-height 60px
    max-height 60px
  100%
    overflow hidden
    min-height 0
    max-height 0

.workspace-status-indicator
  display inline-block
  line-height inherit
  width 22px
  & > *
    display inline
  .fa-circle
    color #00c183
  .workspace-status-spinner
    display inline-block
    line-height inherit
    vertical-align middle
  .workspace-status-spinner .spinner
    width 20px
    height 20px
    font-size 8px
    div
      width 2px
      border-radius 0
      margin-right 2px
  .workspace-status-error
    color #e22812 !important

.workspace-status-indicator .spinner
  text-align center
  padding-right 2px
  padding-bottom 2px
  font-size 10px
.workspace-status-indicator .spinner > *
  background-color #4A90E2
  height 100%
  width 8px
  border-radius 6px
  margin-right 6px
  display inline-block
  animation sk-stretchdelay 1.2s infinite ease-in-out
.workspace-status-indicator .spinner .rect2
  animation-delay -1.1s
.workspace-status-indicator .spinner .rect3
  animation-delay -1.0s
@keyframes sk-stretchdelay
  0%, 40%, 100%
    transform scaleY(0.4)
  20%
    transform scaleY(1.0)
