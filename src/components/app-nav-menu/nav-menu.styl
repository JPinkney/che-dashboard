.ui-container .pf-c-page
  height 100vh !important

#page-sidebar
  a.navbar-brand
    white-space normal
    text-align center
    word-break break-all
  .pf-c-nav .pf-c-nav__item .pf-c-nav__link
    padding-right 10px
    .workspace-name
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      line-height 14px
  .pf-c-nav .pf-c-nav__item
    i
      position relative
      top 1px
    .cheico-dashboard
      top 2px
    .fa-plus
      top 1px
  .pf-c-nav__section
    .pf-c-nav__list
      a
        padding-bottom 8px
        padding-top 8px
        line-height 22px
      a:after
        display none
  .pf-m-dark
    a:hover
      background-color var(--pf-c-nav--m-dark__item--m-current--BackgroundColor)

.pf-c-page .pf-c-page__header.nav-show
  min-height 60px
  max-height 60px
  animation-name showHeader
  animation-duration .2s
  animation-timing-function ease-in

@keyframes showHeader
  0%
    overflow hidden
    min-height 0
    max-height 0
  100%
    overflow visible
    min-height 60px
    max-height 60px

.pf-c-page .pf-c-page__header.nav-hide
  overflow hidden
  min-height 0
  max-height 0
  animation-name hideHeader
  animation-duration .2s
  animation-timing-function ease-in-out

@keyframes hideHeader
  0%
    overflow visible
    min-height 60px
    max-height 60px
  100%
    overflow hidden
    min-height 0
    max-height 0
